{
  "name": "ardrive-desktop-mvp",
  "version": "0.0.1",
  "description": "ArDrive Desktop MVP - Cross-platform desktop app for syncing files to Arweave",
  "main": "dist/main/main.js",
  "homepage": "./",
  "author": "ArDrive",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:electron": "cross-env WEBPACK_DEV_SERVER=true electron .",
    "dev:main": "tsc -p tsconfig.main.json -w",
    "dev:renderer": "webpack serve --config webpack.renderer.js --mode development",
    "build": "npm run clean && npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "webpack --config webpack.renderer.js --mode production",
    "start": "electron .",
    "dist": "npm run build && electron-builder",
    "clean": "rimraf dist release",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "uat": "cross-env NODE_ENV=test npm run start",
    "uat:new-user": "cross-env NODE_ENV=test UAT_SCENARIO=new-user npm run start",
    "uat:existing-user": "cross-env NODE_ENV=test UAT_SCENARIO=existing-user npm run start",
    "uat:dashboard": "cross-env NODE_ENV=test UAT_SCENARIO=dashboard npm run start",
    "uat:clean": "npm run clean && npm run build && npm run uat",
    "postinstall": "patch-package"
  },
  "dependencies": {
    "@ar.io/sdk": "^3.13.0",
    "@ardrive/turbo-sdk": "^1.27.0",
    "@types/bip39": "^2.4.2",
    "@types/crypto-js": "^4.2.2",
    "@types/hdkey": "^2.1.0",
    "arbundles": "^0.6.23",
    "ardrive-core-js": "^3.0.0",
    "arweave": "^1.14.4",
    "axios": "^1.9.0",
    "axios-retry": "^4.5.0",
    "base64-js": "^1.5.1",
    "bignumber.js": "^9.3.0",
    "bip39": "^3.1.0",
    "bn.js": "^5.2.2",
    "chokidar": "^3.5.3",
    "crypto-js": "^4.2.0",
    "futoin-hkdf": "^1.5.3",
    "hdkey": "^2.1.0",
    "jwk-to-pem": "^2.0.7",
    "keytar": "^7.9.0",
    "lucide-react": "^0.514.0",
    "mime-types": "^3.0.1",
    "regression": "^2.0.1",
    "sqlite3": "^5.1.6",
    "utf8": "^3.0.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/ui": "^2.1.8",
    "concurrently": "^8.2.2",
    "copy-webpack-plugin": "^13.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "dotenv": "^17.2.0",
    "electron": "^27.1.3",
    "electron-builder": "^24.8.1",
    "eslint": "^8.54.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "html-webpack-plugin": "^5.5.3",
    "identity-obj-proxy": "^3.0.0",
    "jsdom": "^25.0.0",
    "mini-css-extract-plugin": "^2.9.2",
    "patch-package": "^8.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "style-loader": "^3.3.3",
    "ts-jest": "^29.3.4",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.2",
    "vitest": "^2.1.8",
    "wait-on": "^8.0.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "build": {
    "appId": "com.ardrive.desktop",
    "productName": "ArDrive Desktop",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json",
      "assets/*"
    ],
    "extraResources": [
      "assets/**/*"
    ],
    "icon": "assets/favicon.png",
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/favicon.png",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "assets/favicon.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "assets/favicon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ArDrive Desktop"
    },
    "dmg": {
      "title": "ArDrive Desktop ${version}",
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    }
  }
}
