# ArDrive Desktop MVP - Development Environment Variables
# Copy this file to .env and update the values for your local development

# Dev Mode - Auto-fill for faster testing of Import User flow
# Set ARDRIVE_DEV_MODE=true to enable auto-fill features
ARDRIVE_DEV_MODE=false

# Path to your test wallet JSON file (only used when ARDRIVE_DEV_MODE=true)
# Example: C:\Source\arweave-keyfile-iKryOeZQMONi2965nKz528htMMN_sBcjlhc-VncoRjA.json
ARDRIVE_DEV_WALLET_PATH=

# Password for the test wallet (only used when ARDRIVE_DEV_MODE=true)
# SECURITY NOTE: Only use test wallets and passwords in dev mode!
ARDRIVE_DEV_PASSWORD=

# Default sync folder path (only used when ARDRIVE_DEV_MODE=true)
# Example: C:\ARDRIVE or /Users/username/ARDRIVE
ARDRIVE_DEV_SYNC_FOLDER=

# Other development options
NODE_ENV=development
DEBUG=ardrive:*