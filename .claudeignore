dist/
out/
build/
*.log

# Dependencies
node_modules/

# Test coverage
coverage/
.nyc_output/

# OS files
.DS_Store
Thumbs.db

# IDE files
.idea/
.vscode/settings.json
.vscode/tasks.json
.vscode/launch.json

# Sensitive files
*.pem
*.key
*.enc
